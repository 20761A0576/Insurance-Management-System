
@{
    ViewData["Title"] = "GetPolicyById";
}

@model InsuranceProviderManagementSystem.Models.Policy
@if (Model != null)
{
    <h1>Policy Data Filter By Policy Id</h1>
    <div class="card">
        <h3>Policy Id : @Html.DisplayFor(modelitem => Model.PolicyId)</h3>
        <p>Policy Name : @Html.DisplayFor(modelitem => Model.PolicyName)</p>
        <p>Sum Assured : @Html.DisplayFor(modelitem => Model.SumAssured)</p>
        <p>Premium Amount : @Html.DisplayFor(modelitem => Model.PremiumAmount)</p>
        <p>Tenure : @Html.DisplayFor(modelitem => Model.Tenure)</p>
        <p>Start Date : @Html.DisplayFor(modelitem => Model.StartDate)</p>
        <p>End Date : @Html.DisplayFor(modelitem => Model.EndDate)</p>
        <p>Sub-Category Id : @Html.DisplayFor(modelitem => Model.SubCategoryId)</p>
    </div>
    <a asp-controller="PolicyMvc" asp-action="Index" class="btn">Back</a>
}
else
{
    <div class="background">
        <div class="shape" style="top: -60px;"></div>
        <div class="shape" style="bottom: -60px;"></div>
    </div>
    <form asp-action="GetPolicyById" method="post" style="height: 400px;">
        <h3>Get Policy By Id</h3>

        <label for="PolicyId">Policy Id</label>
        <input type="text" id="name" name="PolicyId" />
        <br/>
        <p style="color:red">@ViewBag.message</p>

        <button type="submit">Conform</button>
    </form>
}

