
@{
    ViewData["Title"] = "AddPolicy";
}

@if(Model == null)
{
    <form asp-action="AddPolicy" method="post">
        <div class="text">
            Policy Application Form
        </div>
        <div class="form-row">
            <div class="input-data">
                <input type="text" id="name" name="PolicyId" required>
                <div class="underline"></div>
                <label for="id">Policy Id</label>
            </div>
            <div class="input-data">
                <input type="text" id="name" name="PolicyName" required>
                <div class="underline"></div>
                <label for="name">Policy Name</label>
            </div>
        </div>
        <div class="form-row">
            <div class="input-data">
                <input type="number" id="SumAssured" name="SumAssured" required>
                <div class="underline"></div>
                <label for="SumAssured">Sum Assured</label>
            </div>
            <div class="input-data">
                <input type="number" id="Tenure" name="Tenure" required>
                <div class="underline"></div>
                <label for="Tenure">Tenure</label>
            </div>
        </div>
        <div class="form-row">
            <div class="input-data">
                @if (ViewBag.scids == null)
                {
                    <input type="text" id="SubCategoryId" name="SubCategoryId" required>
                }
                else
                {
                    <select name="SubCategoryId" id="SubCategoryId" required>
                        <option value="" disabled>Select Sub-Category Id</option>
                        @foreach (string id in ViewBag.scids)
                        {
                            <option value="@id"> @id </option>
                        }
                    </select>
                    <!--<div class="underline"></div>
                     <label for="">Sub-Category Id</label> -->
                }
                <div class="underline"></div>
                <label for="SubCategoryId">Sub-Category Id</label>
            </div>
        </div>
        <div class="form-row">
            <div class="input-data">
                <p style="color:red">@ViewBag.message</p>
            </div>
        </div>
        <div class="form-row submit-btn">
            <div class="input-data">
                <div class="inner"></div>
                <input type="submit" value="submit">
            </div>
        </div>
    </form>
}
else
{
    <form asp-action="AddPolicy" method="post">
        <div class="text">
            Policy Application Form
        </div>
        <div class="form-row">
            <div class="input-data">
                <input type="text" id="name" name="PolicyId" value=@Model.PolicyId required>
                <div class="underline"></div>
                <label for="id">Policy Id</label>
            </div>
            <div class="input-data">
                <input type="text" id="name" name="PolicyName" value="@Model.PolicyName" required>
                <div class="underline"></div>
                <label for="name">Policy Name</label>
            </div>
        </div>
        <div class="form-row">
            <div class="input-data">
                <input type="number" id="SumAssured" name="SumAssured" value=@Model.SumAssured required>
                <div class="underline"></div>
                <label for="SumAssured">Sum Assured</label>
            </div>
            <div class="input-data">
                <input type="number" id="Tenure" name="Tenure" value=@Model.Tenure required>
                <div class="underline"></div>
                <label for="Tenure">Tenure</label>
            </div>
        </div>
        <div class="form-row">
            <div class="input-data">
                <input type="text" id="age" name="SubCategoryId" value=@Model.SubCategoryId required>
                <div class="underline"></div>
                <label for="SubCategoryId">Sub-Category Id</label>
            </div>
        </div>
        <div class="form-row">
            <div class="input-data">
                <p style="color:red">@ViewBag.message</p>
            </div>
        </div>
        <div class="form-row submit-btn">
            <div class="input-data">
                <div class="inner"></div>
                <input type="submit" value="submit">
            </div>
        </div>
    </form>
}


