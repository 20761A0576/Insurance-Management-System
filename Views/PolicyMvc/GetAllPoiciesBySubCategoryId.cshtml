@model IEnumerable<InsuranceProviderManagementSystem.Models.Policy>

@if (Model != null)
{
    <h1>Policy Data Filter By Sub-Category Id</h1>
    <div class="container">
            <table id="outputTable">
                <tr>
                    <th>Policy Id</th>
                    <th>Policy Name</th>
                    <th>Sum Assured</th>
                    <th>Tenure</th>
                    <th>Premium Amount</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Sub-Category Id</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelitem => item.PolicyId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelitem => item.PolicyName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelitem => item.SumAssured)
                        </td>
                        <td>
                            @Html.DisplayFor(modelitem => item.Tenure)
                        </td>
                        <td>
                            @Html.DisplayFor(modelitem => item.PremiumAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelitem => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelitem => item.EndDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelitem => item.SubCategoryId)
                        </td>
                    </tr>
                }
               </table>
    </div>
}
else
{
    <div class="background">
        <div class="shape" style="left: -120px;"></div>
        <div class="shape" style="right: -120px;"></div>
    </div>
    <form asp-action="GetAllPoiciesBySubCategoryId" method="post" style="height: 420px; width: 540px;">

        <h1>Filter By Sub-Category Id</h1>

        <label for="SubCatagoryId">Sub Category Id</label>
        <input type="text" id="SubCatagoryId" name="SubCatagoryId" />

        <br />
        <p style="color:red">@ViewBag.message</p>

        <button type="submit">Conform</button>
    </form>
}

