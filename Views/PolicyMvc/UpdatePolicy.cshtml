
@{
    ViewData["Title"] = "UpdatePolicy";
}

<h1>UpdatePolicy</h1>

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Document</title>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/FormData.css")" />
</head>
<body id="fbody">
    <div class="container">
        <div class="text">
            Policy Application Form
        </div>
        <form asp-action="UpdatePolicy" method="post">
            <div class="form-row">
                <div class="input-data">
                    <input type="text" id="name" name="PolicyName" value="@Model.PolicyName" required>
                    <div class="underline"></div>
                    <label for="name">Policy Name</label>
                </div>
                <div class="input-data">
                    <input type="number" id="SumAssured" name="SumAssured" value=@Model.SumAssured required>
                    <div class="underline"></div>
                    <label for="SumAssured">Sum Assured</label>
                </div>
            </div>
            <div class="form-row">
                <div class="input-data">
                    <input type="text" id="StartDate" name="StartDate" value=@Model.StartDate required>
                    <div class="underline"></div>
                    <label for="StartDate">Start Date</label>
                </div>
                <div class="input-data">
                    <input type="number" id="Tenure" name="Tenure" value=@Model.Tenure required>
                    <div class="underline"></div>
                    <label for="Tenure">Tenure</label>
                </div>
            </div>
            <div class="form-row">
                <div class="input-data" hidden>
                    <input type="text" id="PolicyId" name="PolicyId" value=@Model.PolicyId required>
                    <div class="underline"></div>
                    <label for="PolicyId">Policy Id</label>
                </div>
                <div class="input-data">
                    <input type="text" id="SubCategoryId" name="SubCategoryId" value=@Model.SubCategoryId required>
                    <div class="underline"></div>
                    <label for="SubCategoryId">Sub-Category Id</label>
                </div>
            </div>
            <div class="form-row submit-btn">
                <div class="input-data">
                    <div class="inner"></div>
                    <input type="submit" value="submit">
                </div>
            </div>
        </form>
        <p style="color:red">@ViewBag.message</p>
    </div>
</body>
</html>

